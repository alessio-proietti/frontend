<div x-data="optionsComponent()" x-init="init()" class="box tile is-child">
    <div x-show="$store.wallet.logged !== 'true'">
        <p class=" has-text-centered title is-5">Instructions</p>
        <p>
            Turn On the system to start interacting with AutomaCoin network.
        </p>
    </div>
    <nav x-show="$store.wallet.logged === 'true'" class="panel" id="console">
        <p class="panel-tabs">
            <a :class="{ 'is-active': tab === 'console' }" @click="tab = 'console'">Controls</a>
        </p>
        <div class="panel-block is-active">
            <div x-show="$store.wallet.logged === 'true' && tab === 'console'" class="field is-grouped is-grouped-centered">
                <p class="control">
                    <button @click="fire()" x-bind:disabled="$store.engine.state !== 'ready' || $store.engine.state === 'fetching'" class="button is-success is-rounded">
                        Compute
                    </button>
                </p>
                <p class="control">
                    <button @click="fetch()" x-bind:disabled="$store.engine.state === 'ongoing'" class="button is-warning is-rounded">
                        Fetch
                    </button>
                </p>
                <p class="control">
                    <button x-bind:disabled="$store.engine.state !== 'ongoing' && $store.engine.state !== 'fetching'" class="button is-danger  is-rounded">
                        Abort
                    </button>
                </p>
            </div>
            <div class="ml-3" id="spinner"></div>
        </div>
    </nav>

</div>